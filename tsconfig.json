{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./backend/dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "packages",
    "node_modules",
    "dist",
    "functions",
    "scripts"
  ]
}